{
  "extends": ["airbnb-base"],
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 9
  },
  "rules": {
    "arrow-parens": ["error", "always"],
    "max-len": ["error", 120],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "no-underscore-dangle": ["error", { "allowAfterThis": true }]
  }
}
